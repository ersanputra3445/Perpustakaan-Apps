<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="345dp"
        android:layout_height="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="407dp"
        android:scaleType="centerCrop"

        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="-201dp"
        android:background="#232946" />

    <EditText
        android:id="@+id/editTextEmailForgotPassword"
        android:layout_width="370dp"
        android:layout_height="44dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="411dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="-348dp"
        android:hint="Enter your email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/buttonResetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmailForgotPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#232946"
        android:backgroundTintMode="src_over"
        android:text="Reset Password"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#232946"
        android:backgroundTintMode="src_over"
        android:text="Back"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img" />

</RelativeLayout>
